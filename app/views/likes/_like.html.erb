<% if user_signed_in? %>
    <% if current_user.already_liked?(post) %>
        <%= link_to post_likes_path(post), method: :delete, remote: true do %>
            <i class="fas fa-heart fa-lg like-red like-size" aria-hidden="true">
              <span><%= post.likes.count %></span>
            </i>
        <% end %>
    <% else %>
        <%= link_to post_likes_path(post), method: :post, remote: true do %>
            <i class="fas fa-heart fa-lg  like-size" aria-hidden="true" style="color: #C0C0C0;">
              <span><%= post.likes.count %></span>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart  like-size" aria-hidden="true">
      <span><%= post.likes.count %></span>
    </i>
<% end %>

